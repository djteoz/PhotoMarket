// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  MODERATOR
  ADMIN
  OWNER
}

enum SubscriptionPlan {
  FREE
  PRO
  BUSINESS
}

model User {
  id      String  @id @default(cuid())
  clerkId String  @unique // External Auth ID from Clerk
  email   String  @unique
  name    String?
  phone   String?
  image   String?
  role    Role    @default(USER)

  subscriptionPlan   SubscriptionPlan @default(FREE)
  subscriptionEndsAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  studios   Studio[]
  bookings  Booking[]
  reviews   Review[]
  favorites Favorite[]
  payments  Payment[]

  conversations Conversation[]
  messages      Message[]

  isBanned  Boolean @default(false)
  banReason String?

  forumPosts    ForumPost[]
  forumComments ForumComment[]
  forumLikes    ForumLike[]
  notifications Notification[]
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      NotificationType @default(INFO)
  link      String?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([userId])
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  BOOKING
}

model ForumCategory {
  id          String  @id @default(cuid())
  name        String  @unique
  slug        String  @unique
  description String?
  order       Int     @default(0)

  posts ForumPost[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ForumPost {
  id         String        @id @default(cuid())
  title      String
  content    String // Markdown support
  authorId   String
  author     User          @relation(fields: [authorId], references: [id])
  categoryId String
  category   ForumCategory @relation(fields: [categoryId], references: [id])

  views    Int     @default(0)
  isPinned Boolean @default(false)
  isLocked Boolean @default(false)

  comments ForumComment[]
  likes    ForumLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ForumComment {
  id       String    @id @default(cuid())
  content  String
  authorId String
  author   User      @relation(fields: [authorId], references: [id])
  postId   String
  post     ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  parentId String? // For nested comments
  parent   ForumComment?  @relation("CommentToComment", fields: [parentId], references: [id])
  replies  ForumComment[] @relation("CommentToComment")

  likes ForumLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ForumLike {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  postId String?
  post   ForumPost? @relation(fields: [postId], references: [id], onDelete: Cascade)

  commentId String?
  comment   ForumComment? @relation(fields: [commentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, postId])
  @@unique([userId, commentId])
}

model BannedIp {
  id        String   @id @default(cuid())
  ip        String   @unique
  reason    String?
  createdAt DateTime @default(now())
  createdBy String? // User ID of admin who banned
}

enum PaymentType {
  SUBSCRIPTION
  BOOKING
}

model Payment {
  id         String           @id @default(cuid())
  userId     String
  user       User             @relation(fields: [userId], references: [id])
  amount     Decimal
  currency   String           @default("RUB")
  provider   String // "YOOKASSA" | "ROBOKASSA"
  externalId String? // ID from the provider
  status     String // "PENDING", "SUCCEEDED", "CANCELED"
  type       PaymentType      @default(SUBSCRIPTION)
  plan       SubscriptionPlan @default(FREE)
  booking    Booking?         // Связь с бронированием (для type=BOOKING)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
}

model Studio {
  id          String   @id @default(cuid())
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  name        String
  description String?
  address     String
  city        String
  lat         Float?
  lng         Float?
  phone       String?
  email       String?
  images      String[] // URLs

  // Promoted listing
  isPromoted    Boolean   @default(false)
  promotedUntil DateTime?
  promotionType String? // "TOP", "FEATURED", "HIGHLIGHT"

  // Analytics
  views Int @default(0)

  rooms      Room[]
  reviews    Review[]
  favorites  Favorite[]
  analytics  StudioAnalytics[]
  promotions Promotion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Studio Analytics for detailed tracking
model StudioAnalytics {
  id       String @id @default(cuid())
  studioId String
  studio   Studio @relation(fields: [studioId], references: [id], onDelete: Cascade)

  date     DateTime @db.Date
  views    Int      @default(0)
  clicks   Int      @default(0)
  bookings Int      @default(0)
  revenue  Decimal  @default(0)

  @@unique([studioId, date])
  @@index([studioId])
  @@index([date])
}

// Promotion history
model Promotion {
  id       String @id @default(cuid())
  studioId String
  studio   Studio @relation(fields: [studioId], references: [id], onDelete: Cascade)

  type      String // "TOP", "FEATURED", "HIGHLIGHT"
  startDate DateTime
  endDate   DateTime
  amount    Decimal
  status    String   @default("ACTIVE") // "ACTIVE", "EXPIRED", "CANCELLED"

  createdAt DateTime @default(now())

  @@index([studioId])
}

model Room {
  id              String  @id @default(cuid())
  studioId        String
  studio          Studio  @relation(fields: [studioId], references: [id], onDelete: Cascade)
  name            String
  description     String?
  pricePerHour    Decimal
  area            Float // sq meters
  capacity        Int?
  hasNaturalLight Boolean @default(false)

  images    String[]
  amenities Amenity[] // Many-to-many
  bookings  Booking[]

  icalImportUrl   String?
  icalExportToken String  @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Amenity {
  id    String @id @default(cuid())
  name  String @unique
  rooms Room[]
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Booking {
  id         String        @id @default(cuid())
  userId     String
  user       User          @relation(fields: [userId], references: [id])
  roomId     String
  room       Room          @relation(fields: [roomId], references: [id])
  startTime  DateTime
  endTime    DateTime
  totalPrice Decimal
  status     BookingStatus @default(PENDING)

  // Оплата бронирования
  paymentId  String?  @unique
  payment    Payment? @relation(fields: [paymentId], references: [id])
  isPaid     Boolean  @default(false)

  source     String  @default("INTERNAL") // "INTERNAL" | "ICAL"
  externalId String? // UID from iCal event

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id       String  @id @default(cuid())
  rating   Int
  comment  String?
  userId   String
  user     User    @relation(fields: [userId], references: [id])
  studioId String
  studio   Studio  @relation(fields: [studioId], references: [id])

  createdAt DateTime @default(now())
}

model Favorite {
  id       String @id @default(cuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  studioId String
  studio   Studio @relation(fields: [studioId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, studioId])
}

model SupportTicket {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  status    String   @default("OPEN") // OPEN, CLOSED, IN_PROGRESS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversation {
  id       String    @id @default(cuid())
  users    User[]
  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])
  content        String
  read           Boolean      @default(false)

  createdAt DateTime @default(now())
}
